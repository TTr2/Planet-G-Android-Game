<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hi_scores_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tango.mobdev_assignment1.Activities.HiScoresActivity">

    <ImageView
        android:id="@+id/HiScoreBgndImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/galaxy2" />

    <ImageView
        android:id="@+id/HiScoresTitleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/hi_scores_title"
        tools:layout_editor_absoluteY="-56dp" />

    <ListView
        android:id="@+id/HiScoresListView"
        android:layout_width="379dp"
        android:layout_height="409dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="94dp" />
</android.support.constraint.ConstraintLayout>
